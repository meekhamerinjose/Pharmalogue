<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pillapp.viewcontroller.DrugDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#9e9e9e"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:text="Generic Name "
            android:textAllCaps="true"/>
        <TextView
            android:id="@+id/drugGenericName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textColor="#212121"
            android:text="some text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#9e9e9e"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:text="Brand Name "
            android:textAllCaps="true"/>
        <TextView
            android:id="@+id/drugBrandName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textColor="#212121"
            android:text="some text" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#9e9e9e"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:text="Prescription Details"
            android:textAllCaps="true"/>
        <TextView
            android:id="@+id/drugPrescriptionDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textColor="#212121"
            android:text="some text" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#9e9e9e"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:text="Contraindications"
            android:textAllCaps="true"/>
        <TextView
            android:id="@+id/drugContraindications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textColor="#212121"
            android:text="some text" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#9e9e9e"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:text="Pregnancy Category"
            android:textAllCaps="true"/>
        <TextView
            android:id="@+id/drugPregnancyCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textColor="#212121"
            android:text="some text" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#9e9e9e"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:text="Dosage"
            android:textAllCaps="true"/>
        <TextView
            android:id="@+id/drugDosage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textColor="#212121"
            android:text="some text" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#9e9e9e"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:text="Warnings"
            android:textAllCaps="true"/>
        <TextView
            android:id="@+id/drugWarnings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textColor="#212121"
            android:text="some text" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#9e9e9e"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:text="Side Effects"
            android:textAllCaps="true"/>
        <TextView
            android:id="@+id/drugSideEffects"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textColor="#212121"
            android:text="some text" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
